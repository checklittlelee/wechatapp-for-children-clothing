/**index.wxss**/
/* 顶部 */
.search-container {
  background-color: rgb(243, 166, 166);
}
.search {
  width: 100vw;
  height: 170rpx;
  box-sizing: border-box;
  display: flex;
  padding-top: 100rpx;
  padding-left: 26rpx;
}
.search-title {
  height: 60rpx;
  line-height: 60rpx;
  margin-right: 30rpx;
  font-weight: bold;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.search-input {
  height: 60rpx;
  width: 380rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  border-radius: 20rpx;
  font-size: 12px;
  background: #f7f8fa;
}
/* 轮播图 */
.swiper-container {
  position: relative;
  width: 750rpx;
  height: 375rpx;
}
.swiper-container .swiper1 {
  width: 750rpx;
  height: 375rpx;
}
.swiper-container .swiper1 image {
  width: 750rpx;
  height: 375rpx;
}
/* 轮播图左下角 购买记录 通知提醒  */
.goodsDynamic {
  position: absolute;
  bottom: 46rpx;
  left: 24rpx;
  width: 668rpx;
  color: #fff;
  font-size: 24rpx;
}
.goodsDynamic .swiper2 {
  width: 100%;
  height: 64rpx;
}
.goodsDynamic-item {
  display: inline-flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 32rpx;
  padding: 8rpx 16rpx;
}
.goodsDynamic-item image {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.goodsDynamic-item text {
  margin-left: 8rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
/* 金刚区 */
.category-box {
  /* position: inherit; */
  width: 700rpx;
  margin-top: 20rpx;
  margin-left: 25rpx;
  border-radius: 10px;
  padding: 20rpx 0;
  box-shadow: 0px 0px 12px 0px rgba(5, 5, 5, 0.2);
}
.category-list {
  width: 140rpx;
  display: inline-block;
  overflow: hidden;
}
.category-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}
.category-imgbox {
  width: 100rpx;
  height: 100rpx;
}
.category-title {
  font-size: 24rpx;
}
/* 优惠资讯公告 */
.notice-box {
  margin-top: 30rpx;
  border: 1rpx solid #efeff4;
}
.notice-icon {
  width: 130rpx;
  height: 33rpx;
  margin-right: 10px;
}
/* 限时秒杀 */
.divider-icon {
  width: 34rpx;
  height: 42rpx;
  margin-right: 18rpx;
}
.miaosha-goods-list {
  margin: 20rpx;
  border-radius: 16rpx;
  display: flex;
  border-radius: 16rpx;
}
.miaosha-goods-list image {
  width: 260rpx;
  height: 260rpx;
  flex-shrink: 0;
  border-radius: 16rpx;
}
.miaosha-goods-list .right-info {
  margin-left: 32rpx;
}
.miaosha-goods-list .right-info .goods-title {
  color: #333;
  font-size: 28rpx;
}
.miaosha-goods-list .count-down {
  margin-top: 20rpx;
  padding: 6rpx;
  font-size: 14rpx;
  font-weight: 400;
  text-align: center;
  border-radius: 10rpx;
  background: rgba(250, 195, 198, 0.3);

}
.van-count-down {
  color: #E14962 !important;
  font-size: 12px !important;
  font-weight: 400;
}
.miaosha-price-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 50rpx;
}
.miaosha-price-btn .msbtn {
  width: 170rpx;
  height: 60rpx;
  background: linear-gradient(156deg, #FF7863 0%, #FF211A 100%);
  border-radius: 34rpx;
  border: none !important;
  line-height: 60rpx !important;
  font-size: 13px !important;
}
.miaosha-price-btn .price {
  color: #e64340;
  font-size: 40rpx;
}
.miaosha-price-btn .price text {
  color: #666666;
  font-size: 26rpx;
  text-decoration: line-through;
}
/* 爆品推荐 */
.hotgoods-container {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 0rpx 10rpx;
}
.hotgoods-box {
  width: 330rpx;
  border: 1px solid #D1D1D1;
  border-radius: 5px;
}
.hotgoods-box .img-box image {
  width: 330rpx;
  height: 300rpx;
}
.hotgoods-info {
  margin: 15rpx;
}
.hotgoods-title {
  font-size: 24rpx;
  color: #333;
}
.hotgoods-price {
  color: #F20C32;
  font-size: 34rpx;
}
/* 疯狂砍价 */
.kanjia-vcard {
  background-color: white !important;
}
/* 全面拼图 */
.pintuan-container {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tuan-item {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.tuan-goods-pic {
  width: 700rpx;
  height: 250rpx;
  overflow: hidden;
}
.tuan-goods-pic image {
  width: 692rpx;
}
.tuan-bottom {
  padding: 30rpx;
}
.tuan-title {
  margin-bottom: 10rpx;
  font-size: 30rpx;
  font-weight: 400;
}
.tuan-profile {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #999;
}
.tuan-price .now {
  font-size: 36rpx;
  color: #e64340;
}
.tuan-price .original {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
}
.tuan-btn {
  position: absolute;
  right: 30rpx;
  bottom: 0rpx;
}
/* 商品列表 */
.shangpin-container {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 0 10rpx;
}
.goods-box {
  width: 339rpx;
  border: 1px solid #D1D1D1;
  border-radius: 5px;
  margin-bottom: 24rpx;
}
.goods-box .img-box {
  width: 339rpx;
  height: 339rpx;
}
.goods-box .img-box image {
  width: 339rpx;
  height: 339rpx;
}
.goods-bottom {
  margin: 5rpx;
}
.goods-bottom .goods-title {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.goods-bottom .goods-price {
  font-size: 34rpx;
  color: #F20C32;
}
